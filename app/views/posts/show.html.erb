<main class="posts-page has-comments container">
  <section class="posts">
    <%= render  @post %>
  </section>

  <aside>
    <section class="comments" data-post-id="<%= @post.id %>">
      <% if @post.comments.any? %>
        <%= render @post.comments %>
      <% else %>
       Nenhum comentário até o momento
      <% end %>

      <%= form_with model: @commnent, local: true, class:"new-comment" do |form| %>
        <%= form.hidden_field :post_id, value: @post.id %>
          <div class="field">
            <%= form.text_area :body, placeholder: "Comentário", required: true %>
          </div>
          <div class="actions">
            <%= form.submit " enviar comentário"%>
          </div>
      <% end %>
    </section>
  </aside>




</main>
